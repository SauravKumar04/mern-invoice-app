<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Invoice <%= invoice.invoiceNumber %> - InvoX</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Poppins:wght@400;600;700;800&display=swap" rel="stylesheet">
  
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', sans-serif;
      background: #f8fafc;
      color: #1e293b;
      padding: 20px;
      line-height: 1.6;
    }

    .invoice-container {
      max-width: 900px;
      margin: 0 auto;
      background: #ffffff;
      border-radius: 24px;
      overflow: hidden;
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
      border: 1px solid #f1f5f9;
    }

    .invoice-header {
      background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
      padding: 48px;
      color: white;
      position: relative;
    }

    .invoice-header::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: 
        radial-gradient(circle at 25px 25px, rgba(255,255,255,0.15) 2px, transparent 2px),
        radial-gradient(circle at 75px 75px, rgba(255,255,255,0.1) 2px, transparent 2px);
      background-size: 100px 100px;
      animation: backgroundMove 20s linear infinite;
    }

    @keyframes backgroundMove {
      0% { background-position: 0 0; }
      100% { background-position: 100px 100px; }
    }

    .header-content {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      position: relative;
      z-index: 1;
    }

    .brand-section {
      display: flex;
      align-items: center;
      gap: 16px;
    }

    .brand-logo {
      width: 56px;
      height: 56px;
      background: linear-gradient(135deg, #3b82f6, #8b5cf6, #ec4899);
      border-radius: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 800;
      font-size: 28px;
      color: white;
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }

    .brand-text {
      font-family: 'Poppins', sans-serif;
      font-size: 32px;
      font-weight: 800;
      margin-bottom: 4px;
    }

    .brand-tagline {
      font-size: 14px;
      opacity: 0.9;
      font-weight: 500;
    }

    .invoice-title {
      text-align: right;
    }

    .invoice-title h1 {
      font-family: 'Poppins', sans-serif;
      font-size: 48px;
      font-weight: 800;
      margin-bottom: 8px;
      letter-spacing: -2px;
    }

    .invoice-number {
      font-size: 20px;
      font-weight: 600;
      opacity: 0.95;
    }

    .content-section {
      padding: 48px;
    }

    .info-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 32px;
      margin-bottom: 48px;
    }

    .info-card {
      background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
      padding: 32px;
      border-radius: 20px;
      border: 2px solid #e2e8f0;
      position: relative;
      overflow: hidden;
    }

    .info-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 6px;
      background: linear-gradient(90deg, #3b82f6, #8b5cf6, #ec4899);
      border-radius: 20px 20px 0 0;
    }

    .card-title {
      font-size: 14px;
      font-weight: 700;
      color: #475569;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 20px;
    }

    .company-name, .client-name {
      font-size: 20px;
      font-weight: 800;
      color: #0f172a;
      margin-bottom: 12px;
    }

    .info-item {
      margin-bottom: 8px;
      font-size: 14px;
      color: #64748b;
    }

    .invoice-details {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 24px;
      margin-bottom: 48px;
    }

    .detail-card {
      background: white;
      padding: 24px;
      border-radius: 16px;
      text-align: center;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      border: 2px solid #f1f5f9;
      transition: all 0.3s ease;
    }

    .detail-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }

    .detail-label {
      font-size: 12px;
      font-weight: 700;
      color: #64748b;
      text-transform: uppercase;
      margin-bottom: 12px;
      letter-spacing: 0.5px;
    }

    .detail-value {
      font-size: 18px;
      font-weight: 800;
      color: #0f172a;
    }

    .status-paid { color: #10b981; }
    .status-sent { color: #f59e0b; }
    .status-draft { color: #64748b; }

    .items-section {
      margin-bottom: 48px;
    }

    .section-title {
      font-size: 24px;
      font-weight: 800;
      color: #0f172a;
      margin-bottom: 24px;
      position: relative;
      display: inline-block;
    }

    .section-title::after {
      content: '';
      position: absolute;
      bottom: -8px;
      left: 0;
      width: 60px;
      height: 4px;
      background: linear-gradient(90deg, #3b82f6, #8b5cf6);
      border-radius: 2px;
    }

    .items-table {
      width: 100%;
      border-collapse: collapse;
      background: white;
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .items-table thead {
      background: linear-gradient(135deg, #0f172a, #1e293b);
      color: white;
    }

    .items-table th {
      padding: 20px 16px;
      font-weight: 700;
      text-align: left;
      font-size: 14px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .items-table td {
      padding: 20px 16px;
      border-bottom: 1px solid #f1f5f9;
      font-size: 14px;
    }

    .items-table tbody tr:nth-child(even) {
      background: #f8fafc;
    }

    .items-table tbody tr:hover {
      background: #e0f2fe;
    }

    .item-name {
      font-weight: 700;
      color: #0f172a;
      font-size: 16px;
    }

    .item-description {
      font-size: 12px;
      color: #64748b;
      margin-top: 4px;
    }

    .text-right {
      text-align: right;
      font-weight: 700;
    }

    .totals-section {
      display: flex;
      justify-content: flex-end;
      margin-top: 32px;
    }

    .totals-card {
      background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
      padding: 32px;
      border-radius: 20px;
      min-width: 400px;
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
      border: 2px solid #e2e8f0;
    }

    .total-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 16px 0;
      border-bottom: 1px solid #e2e8f0;
      font-size: 16px;
    }

    .total-row:last-child {
      border-bottom: none;
      margin-top: 16px;
      padding-top: 24px;
      border-top: 3px solid #3b82f6;
    }

    .total-label {
      font-weight: 600;
      color: #475569;
    }

    .total-value {
      font-weight: 800;
      color: #0f172a;
    }

    .final-total .total-label,
    .final-total .total-value {
      font-size: 24px;
      color: #1e40af;
    }

    .notes-section {
      margin-top: 48px;
      padding: 32px;
      background: linear-gradient(135deg, #f0f9ff, #e0f2fe);
      border-radius: 16px;
      border-left: 6px solid #0ea5e9;
    }

    .notes-title {
      font-size: 18px;
      font-weight: 800;
      color: #0c4a6e;
      margin-bottom: 16px;
    }

    .notes-content {
      color: #0e7490;
      font-size: 14px;
      line-height: 1.7;
    }

    .footer {
      background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
      color: white;
      padding: 40px 48px;
      text-align: center;
    }

    .footer-title {
      font-family: 'Poppins', sans-serif;
      font-size: 24px;
      font-weight: 800;
      margin-bottom: 12px;
    }

    .footer-subtitle {
      font-size: 16px;
      opacity: 0.9;
      margin-bottom: 24px;
    }

    .footer-brand {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 12px;
      margin-top: 24px;
      padding-top: 24px;
      border-top: 1px solid rgba(255,255,255,0.2);
    }

    .footer-logo {
      width: 32px;
      height: 32px;
      background: linear-gradient(135deg, #3b82f6, #8b5cf6);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 800;
      font-size: 18px;
      color: white;
    }

    .footer-text {
      font-family: 'Poppins', sans-serif;
      font-weight: 800;
      font-size: 18px;
    }

    @media print {
      body { background: white; padding: 0; }
      .invoice-container { box-shadow: none; border-radius: 0; }
    }
  </style>
</head>
<body>
  <div class="invoice-container">
    <div class="invoice-header">
      <div class="header-content">
        <div class="brand-section">
          <div class="brand-logo">X</div>
          <div>
            <div class="brand-text">InvoX</div>
            <div class="brand-tagline">Modern Invoicing Solution</div>
          </div>
        </div>
        <div class="invoice-title">
          <h1>INVOICE</h1>
          <div class="invoice-number">#<%= invoice.invoiceNumber %></div>
        </div>
      </div>
    </div>

    <div class="content-section">
      <div class="info-grid">
        <div class="info-card">
          <div class="card-title">From</div>
          <div class="company-name"><%= company?.name || 'Your Company' %></div>
          <% if (company?.address) { %>
            <div class="info-item"><%= company.address %></div>
          <% } %>
          <% if (company?.email) { %>
            <div class="info-item">Email: <%= company.email %></div>
          <% } %>
          <% if (company?.phone) { %>
            <div class="info-item">Phone: <%= company.phone %></div>
          <% } %>
        </div>

        <div class="info-card">
          <div class="card-title">Bill To</div>
          <div class="client-name"><%= invoice.clientName %></div>
          <div class="info-item"><%= invoice.clientEmail %></div>
          <% if (invoice.clientAddress) { %>
            <div class="info-item"><%= invoice.clientAddress %></div>
          <% } %>
        </div>
      </div>

      <div class="invoice-details">
        <div class="detail-card">
          <div class="detail-label">Issue Date</div>
          <div class="detail-value"><%= new Date(invoice.issueDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></div>
        </div>
        <div class="detail-card">
          <div class="detail-label">Due Date</div>
          <div class="detail-value"><%= new Date(invoice.dueDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></div>
        </div>
        <div class="detail-card">
          <div class="detail-label">Status</div>
          <div class="detail-value status-<%= invoice.status.toLowerCase() %>"><%= invoice.status %></div>
        </div>
        <div class="detail-card">
          <div class="detail-label">Amount Due</div>
          <div class="detail-value" style="color: #1e40af;">$<%= invoice.total.toFixed(2) %></div>
        </div>
      </div>

      <div class="items-section">
        <h2 class="section-title">Items & Services</h2>
        <table class="items-table">
          <thead>
            <tr>
              <th>Description</th>
              <th style="text-align: center;">Quantity</th>
              <th style="text-align: right;">Unit Price</th>
              <th style="text-align: right;">Amount</th>
            </tr>
          </thead>
          <tbody>
            <% invoice.items.forEach(item => { %>
              <tr>
                <td>
                  <div class="item-name"><%= item.name %></div>
                  <% if (item.description) { %>
                    <div class="item-description"><%= item.description %></div>
                  <% } %>
                </td>
                <td style="text-align: center;"><%= item.quantity %></td>
                <td class="text-right">$<%= item.price.toFixed(2) %></td>
                <td class="text-right">$<%= (item.quantity * item.price).toFixed(2) %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>

        <div class="totals-section">
          <div class="totals-card">
            <% 
              const subtotal = invoice.items.reduce((sum, item) => sum + (item.quantity * item.price), 0);
            %>
            <div class="total-row">
              <span class="total-label">Subtotal</span>
              <span class="total-value">$<%= subtotal.toFixed(2) %></span>
            </div>
            <% if (invoice.tax > 0) { %>
              <div class="total-row">
                <span class="total-label">Tax</span>
                <span class="total-value">$<%= invoice.tax.toFixed(2) %></span>
              </div>
            <% } %>
            <% if (invoice.discount > 0) { %>
              <div class="total-row">
                <span class="total-label">Discount</span>
                <span class="total-value">-$<%= invoice.discount.toFixed(2) %></span>
              </div>
            <% } %>
            <div class="total-row final-total">
              <span class="total-label">Total Amount</span>
              <span class="total-value">$<%= invoice.total.toFixed(2) %></span>
            </div>
          </div>
        </div>
      </div>

      <% if (invoice.notes) { %>
        <div class="notes-section">
          <div class="notes-title">Additional Notes</div>
          <div class="notes-content"><%= invoice.notes %></div>
        </div>
      <% } %>
    </div>

    <div class="footer">
      <div class="footer-title">Thank You!</div>
      <div class="footer-subtitle">We appreciate your business and look forward to working with you again.</div>
      <div class="footer-brand">
        <div class="footer-logo">X</div>
        <div class="footer-text">Powered by InvoX</div>
      </div>
    </div>
  </div>
</body>
</html>